package javaapplication1;
import java.util.*;
public class JavaApplication1 {

    public static void main(String[] args)
    {
        System.out.println("Enter the number betwween 0 and 1000:");
        Scanner input=new Scanner(System.in);
        int num=input.nextInt();
        int x1=num%10;
        num/=10;
        int x2=num%10;
        num/=10;
        int x3=num%10;
        System.out.printf("The sum of the digits is %d\n",x1+x2+x3);
    }
}

